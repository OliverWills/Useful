Alpine install docker command
apk update && apk add docker docker-compose openrc curl wget nano && rc-update add docker boot && service docker start

# Install docker on fresh debian
sudo apt install containerd.io=1.7.28-1~debian.12~bookworm
sudo apt-mark hold containerd.io
sudo systemctl restart docker
docker ps

# add dns to cloudflared tunnel
#1 add cname dns record to tunnel
cloudflared tunnel route dns oliverwills <service>
#2 add to config .cloudflared/config.yml
#3 restart cloudflared service
systemctl restart cloudflared

# Nextcloud reset password
sudo -E -u www-data php /var/www/nextcloud/occ user:resetpassword admin
# get list of users
occ user:list
# reset user layla password
occ user:resetpassword layla
